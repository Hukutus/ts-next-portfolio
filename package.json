{
  "name": "ts-next-portfolio",
  "description": "A simple portfolio-to-be",
  "version": "1.0.0",
  "private": true,
  "author": "Topi Salonen",
  "keywords": [
    "nextjs",
    "starter",
    "typescript"
  ],
  "engines": {
    "node": "14"
  },
  "scripts": {
    "dev": "next",
    "build": "next build",
    "aws-s3-export": "next build && next export",
    "start": "next start",
    "export": "next export",
    "type-check": "tsc",
    "lint": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\"",
    "lint-fix": "eslint --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --fix",
    "prettier-fix": "prettier --ignore-path .gitignore \"src/**/*.+(ts|js|tsx)\" --write",
    "predeploy": "npm run build",
    "upgrade-all": "yarn yarn-upgrade-all"
  },
  "husky": {
    "hooks": {
      "prepare-commit-msg": "exec < /dev/tty && git cz --hook || true",
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "lint-staged": {
    "./src/**/*.{ts,js,jsx,tsx}": [
      "yarn lint --fix",
      "yarn format"
    ]
  },
  "dependencies": {
    "@mdx-js/loader": "1.6.22",
    "@mdx-js/react": "1.6.22",
    "@next/mdx": "11.1.2",
    "babel-loader": "8.2.2",
    "lodash": "4.17.21",
    "next": "11.1.2",
    "react": "17.0.2",
    "react-dom": "17.0.2",
    "react-pdf": "5.3.2",
    "sharp": "0.29.1"
  },
  "devDependencies": {
    "@commitlint/cli": "13.1.0",
    "@commitlint/config-conventional": "13.1.0",
    "@types/node": "16.9.6",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "@types/webpack-env": "1.16.2",
    "@typescript-eslint/eslint-plugin": "4.31.2",
    "@typescript-eslint/parser": "4.31.2",
    "commitizen": "4.2.4",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "7.32.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.24.2",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.26.0",
    "eslint-plugin-react-hooks": "4.2.0",
    "gh-pages": "3.2.3",
    "husky": "7.0.2",
    "lint-staged": "11.1.2",
    "node-sass": "6.0.1",
    "prettier": "2.4.1",
    "raw-loader": "4.0.2",
    "styled-jsx-plugin-sass": "1.0.0",
    "typescript": "4.4.3",
    "yarn-upgrade-all": "0.5.4"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
